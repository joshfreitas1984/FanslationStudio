<Window x:Class="FanslationStudio.UserExperience.ShellView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:FanslationStudio"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
		xmlns:cal="http://www.caliburnproject.org"
		xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
		xmlns:dialogs="clr-namespace:FanslationStudio.UserExperience.Dialogs"
		mc:Ignorable="d"
		Title="{Binding Path=Title}"
		WindowStartupLocation="CenterScreen"
		Width="1920"
		Height="1080">

	<materialDesign:DialogHost DialogTheme="Inherit"
							   IsOpen="{Binding Path=IsDialogOpen, Mode=OneWay}">
		<materialDesign:DialogHost.DialogContent>
			<dialogs:LoadingProjectDialog />
		</materialDesign:DialogHost.DialogContent>
		
		<Grid>
			<!--Header Menu-->
			<DockPanel>
				<materialDesign:ColorZone Padding="16"
										  materialDesign:ShadowAssist.ShadowDepth="Depth2"
										  Mode="PrimaryMid"
										  DockPanel.Dock="Top">

					<DockPanel>
						<TextBlock HorizontalAlignment="Center"
								   VerticalAlignment="Center"
								   Style="{StaticResource MaterialDesignHeadline3TextBlock}"
								   Text="{Binding Path=Title}"
								   d:Text="FanslationStudio: HLTS - version 1.0" />
					</DockPanel>
				</materialDesign:ColorZone>

				<!-- Side Navigation -->
				<TabControl Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
							cal:Message.Attach="[Event SelectionChanged] = [Action TabSelectionChanged($source)]"
							materialDesign:ColorZoneAssist.Mode="Standard"
							materialDesign:ShadowAssist.ShadowDepth="Depth0">

					<TabItem x:Name="Home"
							 Style="{StaticResource MaterialDesignNavigationRailTabItem}"
							 Width="200">
						<TabItem.Header>
							<StackPanel Orientation="Horizontal"
										Width="200">
								<materialDesign:PackIcon Kind="Home"
														 Width="24"
														 Height="24" />
								<TextBlock VerticalAlignment="Center"
										   Margin="10,0">Home</TextBlock>
							</StackPanel>
						</TabItem.Header>
					</TabItem>

					<TabItem x:Name="Project"
							 Style="{StaticResource MaterialDesignNavigationRailTabItem}"
							 Width="200">
						<TabItem.Header>
							<StackPanel Orientation="Horizontal"
										Width="200">
								<materialDesign:PackIcon Kind="File"
														 Width="24"
														 Height="24" />
								<TextBlock VerticalAlignment="Center"
										   Margin="10,0">Project Details</TextBlock>
							</StackPanel>
						</TabItem.Header>
					</TabItem>
					<TabItem x:Name="ManualTranslate"
							 Style="{StaticResource MaterialDesignNavigationRailTabItem}"
							 Width="200">
						<TabItem.Header>
							<StackPanel Orientation="Horizontal"
										Width="200">
								<materialDesign:PackIcon Kind="Translate"
														 Width="24"
														 Height="24" />
								<TextBlock VerticalAlignment="Center"
										   Margin="10,0">Manual Translate</TextBlock>
							</StackPanel>
						</TabItem.Header>
					</TabItem>
					<TabItem x:Name="ImportBulk"
							 Style="{StaticResource MaterialDesignNavigationRailTabItem}"
							 Width="200">
						<TabItem.Header>
							<StackPanel Orientation="Horizontal"
										Width="200">
								<materialDesign:PackIcon Kind="Import"
														 Width="24"
														 Height="24" />
								<TextBlock VerticalAlignment="Center"
										   Margin="10,0">Import Batch</TextBlock>
							</StackPanel>
						</TabItem.Header>
					</TabItem>
					<TabItem x:Name="GenerateOutput"
							 Style="{StaticResource MaterialDesignNavigationRailTabItem}"
							 Width="200">
						<TabItem.Header>
							<StackPanel Orientation="Horizontal"
										Width="200">
								<materialDesign:PackIcon Kind="Export"
														 Width="24"
														 Height="24" />
								<TextBlock VerticalAlignment="Center"
										   Margin="10,0">Generate Output</TextBlock>
							</StackPanel>
						</TabItem.Header>
					</TabItem>
				</TabControl>

				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<!-- Content -->
					<ScrollViewer x:Name="MainScrollViewer"
								  Grid.Row="1"
								  materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True">

						<ContentControl x:Name="ActiveItem" />
					</ScrollViewer>

					<materialDesign:Snackbar x:Name="MainSnackbar"
											 MessageQueue="{materialDesign:MessageQueue}"
											 Grid.Row="1" />
				</Grid>
			</DockPanel>
		</Grid>
	</materialDesign:DialogHost>
</Window>
